#compdef task
local state line
declare -A opt_args

_task_get_tasks () {
  task --list-all | awk 'NR>1 { print $1 }'
}

_task () {
  local state line
  typeset -A opt_args

  _arguments \
    '*: :->args'
  if command -v task &> /dev/null; then
    compadd $(_task_get_tasks)
  else
    echo -e "\nTask command not found"
  fi
}

compdef _task task
